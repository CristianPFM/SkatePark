<form id="form" action="/actualizarperfil" method="post" enctype="multipart/form-data">
  <div class="form-group row w-50 m-auto">
    <div class="form-group col-12 col-sm-6">
      <label>
        Email
      </label>
      <input class="form-control m-auto" type="email" name="email" disabled value={{decoded.email}} />
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>
        Nombre
      </label>
      <input class="form-control m-auto" type="text" name="nombre" required value={{decoded.nombre}} />
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>
        Password
      </label>
      <input id="pass" type="password" class="form-control m-auto" type="password" name="password" required
        value="12345678" />
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>
        Repita la password
      </label>
      <input id="rptpass" type="password" class="form-control m-auto" type="password" name="rptpassword" required
        value="12345678" />
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>

        AÃ±os de experiencia
      </label>
      <input class="form-control m-auto" type="number" name="experiencia" required value={{decoded.anos_experiencia}} />
    </div>
    <div class="form-group col-12 col-sm-6">
      <label>
        Especialidad
      </label>
      <input class="form-control m-auto" type="text" name="especialidad" required value={{decoded.especialidad}} />
      <input class="form-control m-auto" type="hidden" name="id" value={{decoded.id}} />

    </div>
  </div>
  <div class="mb-1">
    <button id="btnActualizar" class="btn btn-primary">
      Actualizar
    </button>
  </div>
  <div>
    <button id="btnEliminar" onclick="eliminarUsuario({{decoded.id}})" class="btn btn-danger">
      Eliminar cuenta
      {{decoded.id}}
    </button>
  </div>
</form>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
  const eliminarUsuario = (id) => {
    const form = document.getElementById("form");
    form.addEventListener("submit", (e) => {
      e.preventDefault();
      console.log("--------");
      axios.delete(`/eliminarperfil/${id}`).then(() => {
      alert(`Usuario Eliminado`);
      });

    })
    }

</script>